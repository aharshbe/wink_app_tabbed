<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aharshberger.myapplication.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@mipmap/ic_launcher_w"
        android:onClick="clickingSmiley"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/reset_person_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:onClick="clicking_reset_person_2"
        android:background="@drawable/round_button"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignRight="@+id/person_2"
        android:layout_alignEnd="@+id/person_2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:onClick="clicking_change_player_2"
        android:text=" Change Player 2 "
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/clickinghelp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/reset_person_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Change Player 1 "
        android:onClick="clicking_change_player_1"
        android:background="@drawable/round_button"
        android:textColor="@android:color/white"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:onClick="clicking_reset_person_1"
        android:text="Reset"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/person_1_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Person_1_Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#ad1a2c"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="seif"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/person_1"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:id="@+id/Person_2_Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#ad1a2c"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:layout_alignTop="@+id/Person_1_Count"
        android:layout_alignLeft="@+id/person_2_button"
        android:layout_alignStart="@+id/person_2_button"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <TextView
        android:id="@+id/person_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:textColor="#ad1a2c"
        android:textSize="35sp"
        android:onClick="clickingTextViewP2"
        android:layout_alignBaseline="@+id/person_1"
        android:layout_alignBottom="@+id/person_1"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/person_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:textColor="#ad1a2c"
        android:textSize="35sp"
        android:onClick="clickingTextViewP1"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/ic_help"
        android:onClick="clickingHelp"
        android:id="@+id/clickinghelp"
        android:layout_alignBottom="@+id/reset_person_1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/person_1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="30sp"
        android:onClick="clicking_wink_person_1"
        android:background="@drawable/round_button"
        android:textColor="@android:color/white"
        android:fontFamily="serif"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_below="@+id/Person_2_Count"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/person_2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="30sp"
        android:onClick="clicking_wink_person_2"
        android:background="@drawable/round_button"
        android:textColor="@android:color/white"
        android:fontFamily="serif"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        android:layout_alignBaseline="@+id/person_1_button"
        android:layout_alignBottom="@+id/person_1_button"
        android:layout_alignRight="@+id/reset_person_2"
        android:layout_alignEnd="@+id/reset_person_2" />



</RelativeLayout>
